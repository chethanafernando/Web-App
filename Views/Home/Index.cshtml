@{
    ViewBag.Title = "Home Page";
}

<!Doctype html>
<html>
<head>
    <title>Home</title>
</head>
<body>
    <div class="container">
        <h2>Order Product</h2>
        <table border="0" class="table-responsive" width="700" cellpadding="6">
            <tbody id="tbody">
                <tr>
                    <td><label>Order No :</label></td>
                    <td><input type="text" class="form-control" id="orderno" placeholder="Order No" /></td>
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                    <td><label>Customer Code :</label></td>
                    <td>
                        <select id="customercode" class="form-control" onchange="getCusName();">
                            <option value="Select">Select</option>
                        </select>
                    </td>
                    <td><label id="cusname" style="text-align:center;"></label></td>
                    <td></td>
                </tr>
                <tr>
                    <td>
                        <label for="procode">Product Code</label>
                        <select id="productcode2" class="form-control" onchange="getUnitPrice();">
                            <option value="Select">Select</option>
                        </select>
                    </td>
                    <td>
                        <label for="proqty">Quantity</label>
                        <input type="number" class="form-control" id="proqty2" placeholder="Enter Quantity" onchange="getTotal();" required />
                        <input type="hidden" id="unitprice2" />
                        <input type="hidden" id="total2" />
                    </td>
                    <td>
                        <button type="button" class="btn btn-primary" onclick="addorderrecord();">Add Row</button>
                    </td>
                </tr>
            </tbody>
        </table>
        <table class="table table-bordered table-hover" id="mytable">
            <thead>
                <tr>
                    <th hidden>ProductID</th>
                    <th>Product Code</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Total</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody id="order">
            </tbody>
        </table>
        <p align="right">
            <table border="0" class="table-responsive" width="500" cellpadding="6" align="right">
                <tbody>
                    <tr>
                        <td><label>Sub Total :</label></td>
                        <td><input type="text" class="form-control" id="subtot" /></td>
                    </tr>
                    <tr>
                        <td><label>Discount Total :</label></td>
                        <td><input type="text" class="form-control" id="distot" value="0" oninput="addDiscount();" /></td>
                    </tr>
                    <tr>
                        <td><label>Net Total :</label></td>
                        <td><input type="text" class="form-control" id="nettot" /></td>
                    </tr>
                </tbody>
            </table>
        </p>
        <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Generate Order</button>
    </div>

    <div class="container">
        <h2>Order Details</h2>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>OrderID</th>
                    <th>Product Code</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Item Total</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody class="tbody">
            </tbody>
        </table>
    </div>


    <div class="modal fade" id="ordModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">×</button>
                    <h4 class="modal-title" id="myModalLabel">Update Order</h4>
                </div>
                <div class="modal-body">
                    <form>
                        <input type="hidden" id="orderno" />
                        <div class="form-group">
                            <label for="procode">Product Code</label>
                            <select id="productcode" class="form-control" onchange="getUnitPrice2();">
                                <option value="Select">Select</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="proqty">Quantity</label>
                            <input type="number" class="form-control" id="proqty" placeholder="Enter Quantity" onchange="getTotal2();" required />
                        </div>
                        <input type="hidden" id="unitprice" />
                        <input type="hidden" id="total" />
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnUpdate" onclick="Update();">Update</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/index.js"></script>
</body>
</html>